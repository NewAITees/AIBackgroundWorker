[Unit]
Description=AIBackgroundWorker Info Collector (RSS/News/Search)
After=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/perso/analysis/AIBackgroundWorker
Environment="PATH=/home/perso/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/home/perso/analysis/AIBackgroundWorker/scripts/info_collector/auto_collect.sh --all --limit 15 --use-ollama

[Install]
WantedBy=multi-user.target

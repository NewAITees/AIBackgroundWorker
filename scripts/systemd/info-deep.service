[Unit]
Description=AIBackgroundWorker Deep Research (DDG + Ollama synthesis)
After=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/home/perso/analysis/AIBackgroundWorker
Environment="PATH=/home/perso/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/home/perso/analysis/AIBackgroundWorker/scripts/info_collector/deep_research.sh --batch-size 3 --min-importance 0.0 --min-relevance 0.0

[Install]
WantedBy=multi-user.target
